---
import type { HTMLAttributes } from "astro/types";

import { iconPaths } from "@/components/IconPaths";

type Props = {
  class?: string;
  color?: string;
  icon: keyof typeof iconPaths;
  size?: string;
};

const { class: className, color = "currentcolor", icon, size } = Astro.props;
const iconPath = iconPaths[icon];
const attrs: HTMLAttributes<"svg"> = {};

if (size) attrs.style = { "--size": size };
---

<svg
  aria-hidden="true"
  class:list={["h-[var(--size,100%)] w-[var(--size,100%)]", className]}
  fill={color}
  focusable="false"
  set:html={iconPath}
  stroke={color}
  viewBox="0 0 256 256"
  xmlns="http://www.w3.org/2000/svg"
  {...attrs}
/>
