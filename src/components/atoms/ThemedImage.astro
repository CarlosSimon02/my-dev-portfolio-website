---
import { Image } from "astro:assets";

type Props = {
  alt: string;
  class?: string;
  srcDark: ImageMetadata;
  srcLight: ImageMetadata;
};

const { alt, class: className, srcDark, srcLight } = Astro.props;
---

<Fragment>
  <Image
    alt={alt}
    class:list={[
      "dark transition-transform duration-700 group-hover:scale-105 group-hover:duration-500",
      className
    ]}
    src={srcDark}
  />
  <Image
    alt={alt}
    class:list={[
      "light transition-transform duration-700 group-hover:scale-105 group-hover:duration-500",
      className
    ]}
    src={srcLight}
  />
</Fragment>

<style>
  :global([data-ui-mode="dark"]) img.light {
    display: none;
  }

  :global(html:not([data-ui-mode="dark"])) img.dark {
    display: none;
  }
</style>
