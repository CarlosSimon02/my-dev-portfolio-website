---
import type { HTMLAttributes } from "astro/types";
import { iconPaths } from "./IconPaths";

type Props = {
  icon: keyof typeof iconPaths;
  color?: string;
  size?: string;
  viewBox?: string;
  class?: string;
};

const {
  color = "currentcolor",
  icon,
  size,
  viewBox,
  class: className,
} = Astro.props;

const iconPath = iconPaths[icon];

const attrs: HTMLAttributes<"svg"> = {};

if (size) attrs.style = { "--size": size };
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 256 256"
  aria-hidden="true"
  stroke={color}
  fill={color}
  set:html={iconPath}
  class:list={["h-[var(--size,100%)] w-[var(--size,100%)]", className]}
  {...attrs}
/>
